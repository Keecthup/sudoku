<Window x:Class="sudoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vym="clr-namespace:sudoku.ViewModels" 
        xmlns:local="clr-namespace:sudoku"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="1080" Width="1920" >
    <Window.DataContext>
        <vym:ViewModelMainWindow/>
    </Window.DataContext>
    <Grid>
        <Label x:Name="Nazvanie" Content="{Binding Title}" HorizontalAlignment="Left" Margin="310,95,-1,0" VerticalAlignment="Top" Height="110" Width="298" FontSize="72" FontFamily="MS Reference Sans Serif" FontWeight="Bold"/>
        <Button x:Name="knopka_starta" Content="Button" HorizontalAlignment="Left" Margin="310,280,0,0" VerticalAlignment="Top" Background="#FFA3F3F9" Width="249" Height="100" FontSize="48" BorderBrush="White"/>
    </Grid>
</Window>
